<div class="page-header">
  <div><h1>*Root path*</h1></div><h1>Projects</h1><br>
</div>

<ul class=actions">
  <li><%= link_to fa_icon("plus") + " New Project", new_project_path, class: "btn btn-success" %></li>
</ul>

<div id="projects">
  <% @projects.each do |project| %>
